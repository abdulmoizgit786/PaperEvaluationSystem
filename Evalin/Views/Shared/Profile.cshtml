@{   Evalin.Models.User user = (Evalin.Models.User)Session["CurrentUser"];
    if (Request.IsAjaxRequest())
    {
        Layout = "";
    }
    else
    {
        if (user.type.Equals("Student"))
        { Layout = "~/Views/Shared/StudentMasterPage.cshtml"; }
        else
        { Layout = "~/Views/Shared/TeacherMasterPage.cshtml"; }
        
        }
}



<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="row flex-lg-nowrap">


        <div class="col">
            <div class="row">
                <div class="col mb-3">
                    <div class="card" style="border-top: 7px solid blue;">
                        <div class="card-body">
                            <div class="e-profile">
                                <div class="row">
                                    <div class="col-12 col-sm-auto mb-3">
                                        <div class="mx-auto" style="width: 140px;">
                                            <div class="d-flex justify-content-center align-items-center rounded" style="height: 140px; background-color: rgb(233, 236, 239);">
                                                <img style="color: rgb(166, 168, 170); width:140px; height:140px; font: bold 8pt Arial;" src="@user.ImageLocation.ToString()" onerror="this.onerror = null; this.src = '/Images/ProfileImagePlaceholder.jpg';" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                                        <div class="text-center text-sm-left mb-2 mb-sm-0">
                                            <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap">@user.Fullname</h4>
                                            <p class="mb-0">@user.Emailaddress</p>
                                            <br />
                                            <button class="btn btn-primary" type="button">
                                                <i class="fa fa-fw fa-camera"></i>
                                                <span>Change Photo</span>
                                            </button>
                                        </div>

                                    </div>
                                </div>

                                <div class="tab-content pt-3">
                                    <div class="tab-pane active">
                                        <form class="form" novalidate="">
                                            <div class="row">
                                                <div class="row">
                                                    <div class="col-sm-auto">
                                                        <div class="col-sm">
                                                            <div class="form-group">
                                                                <label>Full Name</label>
                                                                <input class="form-control " type="text" value="@user.Fullname" name="name" placeholder="Full name" style="width:240px;"><b></b>
                                                                <label>Username</label>
                                                                <input class="form-control" type="text" name="username" value="@user.Username" placeholder="Username" style="width:240px;">
                                                            </div>
                                                        </div><br />

                                                    </div><br />
                                                    <div class="row">
                                                        <div class="col">
                                                            <div class="col-sm-auto" style="margin-left:15px">
                                                                <label>Email</label>
                                                                <input class="form-control" type="text" placeholder="user@example.com" value="@user.Emailaddress" style="width:240px;">
                                                            </div>
                                                            <div class="col" style="margin-left:15px;">
                                                                <label>Date of Birth</label>
                                                                <input class="form-control" style="width:240px;" type="text" value="@user.DOB" placeholder="Date of Birth">
                                                            </div>

                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col mb-3">

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="row active">
                                                    <div class="col-sm-auto">
                                                        <div class="col">
                                                            <div class="form-group">
                                                                <label>Password</label>

                                                                <input class="form-control " type="password" name="name" value="@user.Password" placeholder="Password" style="width:240px;"><b></b>
                                                                <br />   <label>Confirm password</label>
                                                                <input class="form-control" type="password" name="username" placeholder="Confrim Password" style="width:240px;">
                                                            </div>
                                                        </div><br />

                                                    </div><br />
                                                    <div class="row active">
                                                        <div class="col ">
                                                            <div class="col" style="margin-left:15px;">
                                                                <label>New Passwords</label>
                                                                <input class="form-control" type="text" placeholder="New Password" style="width:240px;">
                                                            </div>


                                                        </div>
                                                    </div>

                                                </div>
                                            </div>
                                            <div class="col-12 col-sm-6 mb-3">



                                                <br />
                                                <div class="col " style="margin-left:190px;">
                                                    <button class="btn btn-primary" type="submit">Save Changes</button>
                                                </div>
                                            </div>
                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

